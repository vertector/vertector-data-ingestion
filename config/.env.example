# Vertector Data Ingestion - Environment Configuration Example
# Copy this file to .env and customize for your environment

# ============================================================================
# General Configuration
# ============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
VERTECTOR_LOG_LEVEL=INFO

# Output directory for exported files
VERTECTOR_OUTPUT_DIR=./output

# Cache settings
VERTECTOR_ENABLE_CACHE=true
VERTECTOR_CACHE_DIR=./cache
VERTECTOR_CACHE_TTL=86400  # 24 hours in seconds

# Performance
VERTECTOR_BATCH_PROCESSING_WORKERS=8
VERTECTOR_MAX_RETRIES=3
VERTECTOR_RETRY_DELAY=1.0

# ============================================================================
# VLM (Vision-Language Model) Configuration
# ============================================================================

# Enable MLX acceleration (Apple Silicon only)
VERTECTOR_VLM_USE_MLX=false

# Preset model selection
# Options: granite-mlx, smoldocling, qwen25-3b, pixtral, gemma3, phi4
VERTECTOR_VLM_PRESET_MODEL=

# Custom model (alternative to preset)
VERTECTOR_VLM_CUSTOM_MODEL_REPO_ID=
VERTECTOR_VLM_CUSTOM_MODEL_PROMPT=

# Performance
VERTECTOR_VLM_BATCH_SIZE=8

# Features
VERTECTOR_VLM_ENABLE_PICTURE_DESCRIPTION=true
VERTECTOR_VLM_ENABLE_TABLE_DETECTION=true

# ============================================================================
# Audio Transcription Configuration
# ============================================================================

# Whisper model size
# Options: tiny, base, small, medium, large, turbo
VERTECTOR_AUDIO_MODEL_SIZE=base

# Audio backend
# Options: auto, mlx, standard
VERTECTOR_AUDIO_BACKEND=auto

# Transcription settings
VERTECTOR_AUDIO_LANGUAGE=en  # Leave empty for auto-detect
VERTECTOR_AUDIO_WORD_TIMESTAMPS=true
VERTECTOR_AUDIO_INITIAL_PROMPT=

# Quality settings
VERTECTOR_AUDIO_BEAM_SIZE=5  # 1-10, higher = more accurate
VERTECTOR_AUDIO_TEMPERATURE=0.0  # 0.0-1.0, 0.0 = deterministic

# Advanced options
VERTECTOR_AUDIO_VAD_FILTER=false
VERTECTOR_AUDIO_CONDITION_ON_PREVIOUS_TEXT=true

# ============================================================================
# OCR Configuration
# ============================================================================

# OCR engine selection
# Options: easyocr, tesseract, ocrmac
VERTECTOR_OCR_ENGINE=easyocr

# GPU acceleration
VERTECTOR_OCR_USE_GPU=false

# Language support (comma-separated)
VERTECTOR_OCR_LANGUAGES=en

# Quality
VERTECTOR_OCR_CONFIDENCE_THRESHOLD=0.5

# Performance
VERTECTOR_OCR_BATCH_SIZE=4

# ============================================================================
# Chunking Configuration (for RAG)
# ============================================================================

# Chunk size limits
VERTECTOR_CHUNKING_MAX_TOKENS=512
VERTECTOR_CHUNKING_MIN_CHUNK_SIZE=100

# Overlap between chunks
VERTECTOR_CHUNKING_OVERLAP_TOKENS=50

# Boundary respect
VERTECTOR_CHUNKING_RESPECT_BOUNDARIES=true
VERTECTOR_CHUNKING_RESPECT_SENTENCES=true

# Metadata
VERTECTOR_CHUNKING_INCLUDE_METADATA=true

# ============================================================================
# Vector Store Configuration
# ============================================================================

# Vector store type
# Options: chroma, pinecone, qdrant, opensearch
VERTECTOR_VECTOR_STORE=chroma

# Embedding model (HuggingFace model ID)
VERTECTOR_EMBEDDING_MODEL=Qwen/Qwen3-Embedding-0.6B

# ChromaDB settings
VERTECTOR_CHROMA_PERSIST_DIRECTORY=./chroma_db
VERTECTOR_CHROMA_COLLECTION_NAME=documents

# Pinecone settings (if using Pinecone)
# VERTECTOR_PINECONE_API_KEY=your-api-key
# VERTECTOR_PINECONE_ENVIRONMENT=your-environment
# VERTECTOR_PINECONE_INDEX_NAME=your-index

# Qdrant settings (if using Qdrant)
# VERTECTOR_QDRANT_URL=http://localhost:6333
# VERTECTOR_QDRANT_API_KEY=
# VERTECTOR_QDRANT_COLLECTION_NAME=documents

# ============================================================================
# Environment-Specific Presets
# ============================================================================

