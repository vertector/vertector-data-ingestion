# Vertector Data Ingestion Configuration

# Pipeline Configuration
VERTECTOR_DEFAULT_PIPELINE=classic  # classic or vlm
VERTECTOR_AUTO_DETECT_PIPELINE=true

# Model Management
VERTECTOR_AUTO_DOWNLOAD_MODELS=true  # Set to false in production
VERTECTOR_MODEL_CACHE_DIR=~/.cache/vertector/models

# OCR Configuration
VERTECTOR_OCR_ENGINE=easyocr  # easyocr, tesseract, or ocrmac
VERTECTOR_OCR_LANGUAGES=en
VERTECTOR_OCR_USE_GPU=true

# Table Extraction
VERTECTOR_TABLE_MODE=accurate
VERTECTOR_TABLE_CELL_MATCHING=true

# VLM Configuration
VERTECTOR_VLM_USE_MLX=false  # Set to true on macOS with M-series chips
VERTECTOR_VLM_BATCH_SIZE=8

# Error Handling
VERTECTOR_FAIL_FAST=false
VERTECTOR_MAX_RETRIES=3

# Caching
VERTECTOR_ENABLE_CACHE=false
VERTECTOR_CACHE_DIR=~/.cache/vertector/conversions

# Chunking for RAG
VERTECTOR_CHUNK_SIZE=512
VERTECTOR_CHUNK_TOKENIZER=sentence-transformers/all-MiniLM-L6-v2
VERTECTOR_CHUNK_MERGE_PEERS=true

# Vector Store
VERTECTOR_VECTOR_STORE=chroma  # chroma, pinecone, qdrant
VERTECTOR_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VERTECTOR_CHROMA_PERSIST_DIR=./chroma_db

# Logging
VERTECTOR_LOG_LEVEL=INFO
VERTECTOR_LOG_FILE=vertector.log

# Performance
VERTECTOR_BATCH_PROCESSING_WORKERS=4
